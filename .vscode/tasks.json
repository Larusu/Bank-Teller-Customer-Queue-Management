{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build all C++ files in ProjectFolder",
      "type": "shell",
      "command": "g++",
      "args": [
        "ProjectFolder/*.cpp",
        "-o",
        "ProjectFolder/main.exe",
        "-IProjectFolder"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compiles all .cpp files in ProjectFolder into main.exe"
    }
  ]
}
